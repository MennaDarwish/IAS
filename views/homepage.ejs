<!DOCTYPE html>
<html>
  <head>
    <% include ../views/partials/head %>
  </head>
  <body>
    <form action="signup" method="post">
      <fieldset class="secondary-content col">
        <label>Email
          <input type="text" name="username" placeholder="name@domain.com" required="">
        </label>
        <label>Password
          <input type="password" name="password" placeholder="password" required="">
        </label>
        <label>name
          <input type="text" name="name" placeholder="name" required="">
        </label>
        <label>channel
          <input type="text" name="channel" placeholder="channel" required="">
        </label>
        <label>Domain
          <input type="text" name="domain" placeholder="domain" required="">
        </label>
      </fieldset>
      <fieldset class="account-action">
        <input type="submit" name="submit" value="signup" class="btn">
      </fieldset>
    </form>
    <script>
      function validateForm() {
      	var x = document.forms['username'].value;
      	if(x==null || x=='') {
      		alert('Please fill out an email address');
      		return false;
      	}
      }
    </script>
  </body>
</html>