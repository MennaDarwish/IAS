<!DOCTYPE html>
<html>
  <head>
    <% include ../views/partials/head %>
  </head>
  <body>
  	 <form action="/actiontypes/:<%= actiontype.id %>" method="post">
     <fieldset class="account-info">
        <label>Action Name
          <input type="text" name="actionName" placeholder="<%= actiontype.actionName %>" required="">
        </label>
        <label>Action Weight
          <input type="text" name="actionWeight" placeholder="<%= actiontype.actionWeight %>" required="">
        </label>
      </fieldset>
      <fieldset class="account-action">
        <input type="submit" name="submit" value="Edit" class="btn">
      </fieldset>
    </form>

     <form action="/actiontypes/:<%= actiontype.id %>" method="delete">
      <fieldset class="account-action">
        <a href = '/actiontypes/: <%= actiontype.id%>'rel = "unfollow" data-method = "delete">Destroy</a>
        <!--button type="submit">Delete</button-->
      </fieldset>
    </form>
  </body>
</html>